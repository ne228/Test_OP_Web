@model Question
@{


}



<div class="edit-question">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr />
    <input type="hidden" asp-for="Id" />
    <div class="edit-question-item edit-questionString">
        <input asp-for="QuestionString" class="form-control" />
        <span asp-validation-for="QuestionString" class="text-danger"></span>
    </div>
    <hr />
    <div class="edit-question-item edit-anwsers">
        @{
            for (int i = 0; i < 6; i++)
            {
                var anwser = Model.Anwsers[i];

                <div class="input-group edit-anwsers-item">
                    <div class="checkboxAnwser">
                        <input type="checkbox" asp-for="Anwsers[i].Right" />
                    </div>
                    <div class="inputAnwser">
                        <input asp-for="Anwsers[i].Text" class="form-control" />
                        <span asp-validation-for="Anwsers[i]" class="text-danger"></span>
                    </div>
                </div>

               
            }
        }

    </div>
    <hr />

</div>

