@model LoginViewModel
<div class="question-create-title">
    <h1>ВХОД В ПРИЛОЖЕНИЕ</h1>
</div>
<form method="post" asp-controller="Account" asp-action="Login" id="login_form"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control login-input" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Password"></label>
        <input class="form-control login-password" asp-for="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="mb-3 form-check">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe"></label>
    </div>

    <div>
        <input class="login-btn custom-alert-btn-ok" type="submit" value="Войти" id="login_btn" />
    </div>
    <div class="">
        <a class="nav-link active text-dark question-warning" asp-controller="Account" asp-action="Register">Регистрация</a>
    </div>

    @* @Html.ActionLink("Напомнить пароль", "GetPassword", "Account") *@

</form>